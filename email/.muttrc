set realname = "Cole Kowalski"

set folder = ~/.mail
set spoolfile = "+northernbloc/Inbox"
set mbox_type = Maildir
set timeout = 3
set mail_check = 1

set header_cache = ~/.cache/mutt/headers
set message_cachedir = ~/.cache/mutt/bodies

set smart_wrap
set markers = no # no + on wrapped lines

set sort = "threads"
set sort_aux = "last-date-received"

auto_view text/html
alternative_order text/plain text/enriched text/html *

set pgp_sign_as = 7847EDF0
set pgp_use_gpg_agent = yes
set pgp_timeout = 3600
set crypt_autosign = yes
set crypt_replyencrypt = yes

set mailcap_path = ~/.mutt/mailcap

macro index,pager \cb "<pipe-message> urlscan<Enter>"
macro attach,compose \cb "<pipe-entry> urlscan<Enter>"

source ~/.mutt/conf/headers.rc
source ~/.mutt/conf/gpg.rc
source ~/.mutt/conf/colors.rc
source ~/.mutt/conf/sidebar.rc

mailboxes `python ~/.mutt/mailboxes.py`

folder-hook disqus/* source ~/.mutt/accounts/disqus
folder-hook northernbloc/* source ~/.mutt/accounts/northernbloc
folder-hook zeta/* source ~/.mutt/accounts/zeta
