[user]
  name = Cole Kowalski
  email = cole@northernbloc.org
  signingkey = 49B9A4F9D49940C9EE2047B5BF310ED27847EDF0

[alias]
  ar = archive --format=tar
  ci = commit
  co = checkout
  dc = diff --cached
  gr = log --graph --full-history --all --color --pretty=format:\"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s\"
  oldbranches = for-each-ref --sort=committerdate --format='%(committerdate:short) %(refname:short)' refs/heads/
  st = status
  wdiff = diff --color-words

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[commit]
  gpgsign = true

[core]
  excludesfile = ~/.gitignore_global

[push]
  default = tracking

[include]
  path = .gitconfig.local

[github]
  user = colekowalski
